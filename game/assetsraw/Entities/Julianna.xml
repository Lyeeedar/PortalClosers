<Entity xmlns:meta="Editor">
	<Components>
		<AI>
			<classID>AI</classID>
			<AiPath>AI/RangedAI</AiPath>
		</AI>
		<DirectionalSpriteComponent>
			<classID>DirectionalSprite</classID>
			<DirectionalSprite meta:RefKey="DirectionalSprite">
				<Animations>
					<Animation>
						<Name>idle</Name>
						<Up meta:RefKey="Sprite">
							<Name>Oryx/Custom/heroes/juliana_staff</Name>
							<DrawActualSize>true</DrawActualSize>
						</Up>
						<Down meta:RefKey="Sprite">
							<Name>Oryx/Custom/heroes/juliana_staff</Name>
							<DrawActualSize>true</DrawActualSize>
						</Down>
					</Animation>
				</Animations>
			</DirectionalSprite>
		</DirectionalSpriteComponent>
		<Position>
			<classID>Position</classID>
			<Slot>Entity</Slot>
		</Position>
		<Statistics>
			<classID>Statistics</classID>
			<BaseStatistics>
				<Max_hp>10000</Max_hp>
				<Atk_power>100</Atk_power>
				<Crit_chance>0.5</Crit_chance>
				<Armour>100</Armour>
			</BaseStatistics>
			<Faction>player</Faction>
			<AttackDefinition meta:RefKey="AttackDefinition">
				<Type>Poison</Type>
				<Range>3</Range>
				<FlightEffect meta:RefKey="ParticleEffectTemplate">
					<Base meta:RefKey="ParticleEffect">
						<Name>Ranged/FlightParticle</Name>
						<KillOnAnimComplete>true</KillOnAnimComplete>
					</Base>
					<Overrides>
						<OverrideTexture>
							<Name>white</Name>
							<Texture meta:RefKey="Texture">
								<File>Oryx/Custom/items/thorn_spear</File>
							</Texture>
						</OverrideTexture>
					</Overrides>
				</FlightEffect>
			</AttackDefinition>
			<BloodColour>255,0,0,255</BloodColour>
		</Statistics>
		<LightComponent>
			<classID>Light</classID>
			<Light meta:RefKey="Light">
				<Colour>255,255,255,255</Colour>
				<Brightness>0.2</Brightness>
				<Range>3</Range>
			</Light>
		</LightComponent>
	</Components>
</Entity>