<Entity xmlns:meta="Editor">
	<Components>
		<AI>
			<classID>AI</classID>
			<AiPath>AI/MeleeAI</AiPath>
		</AI>
		<DirectionalSpriteComponent>
			<classID>DirectionalSprite</classID>
			<DirectionalSprite meta:RefKey="DirectionalSprite">
				<Animations>
					<Animation>
						<Name>idle</Name>
						<Up meta:RefKey="Sprite">
							<Name>Oryx/Custom/heroes/saurena</Name>
							<DrawActualSize>true</DrawActualSize>
						</Up>
						<Down meta:RefKey="Sprite">
							<Name>Oryx/Custom/heroes/saurena</Name>
							<DrawActualSize>true</DrawActualSize>
						</Down>
					</Animation>
				</Animations>
			</DirectionalSprite>
		</DirectionalSpriteComponent>
		<Position>
			<classID>Position</classID>
			<Slot>Entity</Slot>
			<CanSwap>true</CanSwap>
		</Position>
		<Statistics>
			<classID>Statistics</classID>
			<BaseStatistics>
				<Max_hp>1000</Max_hp>
				<Atk_power>100</Atk_power>
				<Crit_chance>0.5</Crit_chance>
				<Armour>100</Armour>
			</BaseStatistics>
			<Faction>player</Faction>
			<AttackDefinition meta:RefKey="AttackDefinition">
				<Type>Lightning</Type>
				<HitEffect meta:RefKey="ParticleEffect">
					<Name>EnemyAttacks/slash</Name>
				</HitEffect>
			</AttackDefinition>
			<BloodColour>255,0,0,255</BloodColour>
		</Statistics>
		<Ability>
			<classID>Ability</classID>
			<Ability1>Abilities/Saurena/Cleave</Ability1>
			<Ability2>Abilities/Saurena/ArcaneStrike</Ability2>
			<Ability3>Abilities/Saurena/PowerKick</Ability3>
			<Ability4>Abilities/Saurena/HealingPotion</Ability4>
			<Ultimate>Abilities/Saurena/Bloodrage</Ultimate>
		</Ability>
	</Components>
